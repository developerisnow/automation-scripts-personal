#!/usr/bin/env zsh
# üöÄ MINIMAL ZSHRC - –ú–æ–¥—É–ª—å–Ω–∞—è —Å—Ç—Ä—É–∫—Ç—É—Ä–∞ –¥–ª—è ADHD
# ===============================================
# –í—Å–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ —Ä–∞–∑–¥–µ–ª–µ–Ω—ã –ø–æ —Ñ–∞–π–ª–∞–º –≤ ~/.config/zsh/
# –õ–µ–≥–∫–æ –Ω–∞–π—Ç–∏, –ª–µ–≥–∫–æ –∏–∑–º–µ–Ω–∏—Ç—å, –ª–µ–≥–∫–æ –ø–æ–Ω—è—Ç—å!

# üè† ZSH Base Directory
export ZSH_CONFIG="$HOME/.config/zsh"

# üìä Debug mode (—Ä–∞—Å–∫–æ–º–º–µ–Ω—Ç–∏—Ä—É–π –¥–ª—è –æ—Ç–ª–∞–¥–∫–∏)
# ZSH_DEBUG=1

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –±–µ–∑–æ–ø–∞—Å–Ω–æ–π –∑–∞–≥—Ä—É–∑–∫–∏ —Ñ–∞–π–ª–æ–≤
load_if_exists() {
    [[ -f "$1" ]] && source "$1"
}

# üåç Environment Variables (–ø–µ—Ä–≤—ã–º –¥–µ–ª–æ–º!)
# ----------------------------------------
load_if_exists "$ZSH_CONFIG/env/paths.zsh"
load_if_exists "$ZSH_CONFIG/env/vars.zsh"

# ‚öôÔ∏è ZSH Configuration
# --------------------
load_if_exists "$ZSH_CONFIG/config/history.zsh"
load_if_exists "$ZSH_CONFIG/config/completion.zsh"
load_if_exists "$ZSH_CONFIG/config/prompt.zsh"

# üõ†Ô∏è Functions (–¥–æ –∞–ª–∏–∞—Å–æ–≤, —Ç.–∫. –∞–ª–∏–∞—Å—ã –º–æ–≥—É—Ç –∏—Ö –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å)
# ------------------------------------------------------------
load_if_exists "$ZSH_CONFIG/functions/helpers.zsh"
load_if_exists "$ZSH_CONFIG/functions/project.zsh"

# üìù Aliases (–ø–æ—Ä—è–¥–æ–∫ –≤–∞–∂–µ–Ω!)
# ---------------------------
# 1. System aliases (–±–∞–∑–æ–≤—ã–µ –∫–æ–º–∞–Ω–¥—ã)
load_if_exists "$ZSH_CONFIG/aliases/system.zsh"

# 2. Navigation (cd, paths)
load_if_exists "$ZSH_CONFIG/aliases/navigation.zsh"

# 3. Git aliases
load_if_exists "$ZSH_CONFIG/aliases/git.zsh"

# 4. Docker aliases
load_if_exists "$ZSH_CONFIG/aliases/docker.zsh"

# 5. Development tools
load_if_exists "$ZSH_CONFIG/aliases/tools.zsh"

# 6. Project-specific
load_if_exists "$ZSH_CONFIG/aliases/projects.zsh"
load_if_exists "$ZSH_CONFIG/aliases/obsidian.zsh"
load_if_exists "$ZSH_CONFIG/aliases/llms.zsh"
load_if_exists "$ZSH_CONFIG/aliases/crypto.zsh"

# 7. Personal/Custom aliases (–ø–æ—Å–ª–µ–¥–Ω–∏–º–∏, —á—Ç–æ–±—ã –ø–µ—Ä–µ–æ–ø—Ä–µ–¥–µ–ª–∏—Ç—å –µ—Å–ª–∏ –Ω—É–∂–Ω–æ)
load_if_exists "$ZSH_CONFIG/aliases/personal.zsh"

# üîå External Tools
# -----------------
# Starship prompt
if command -v starship &> /dev/null; then
    eval "$(starship init zsh)"
fi

# Zoxide (better cd)
if command -v zoxide &> /dev/null; then
    eval "$(zoxide init zsh)"
fi

# Direnv
if command -v direnv &> /dev/null; then
    eval "$(direnv hook zsh)"
fi

# NVM (Node Version Manager)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"

# üéØ Quick Info (–¥–ª—è ADHD - —Å—Ä–∞–∑—É –≤–∏–¥–Ω–æ —á—Ç–æ –∑–∞–≥—Ä—É–∂–µ–Ω–æ)
# ----------------------------------------------------
if [[ -n "$ZSH_DEBUG" ]]; then
    echo "‚úÖ ZSH Config loaded from: $ZSH_CONFIG"
    echo "üìä Aliases loaded: $(alias | wc -l) total"
    echo "üõ†Ô∏è  Functions loaded: $(declare -f | grep -c '^[a-zA-Z_]')"
fi

# üî• Quick reload alias (–≤—Å–µ–≥–¥–∞ –ø–æ–¥ —Ä—É–∫–æ–π)
alias reload='source ~/.zshrc && echo "‚úÖ ZSH config reloaded!"'
alias zshrc='${EDITOR:-code} ~/.zshrc'
alias zshconf='cd ~/.config/zsh && ${EDITOR:-code} .'

# üìç –ü–æ—Å–ª–µ–¥–Ω—è—è —Å—Ç—Ä–æ–∫–∞ - –ø–æ–∫–∞–∑–∞—Ç—å –≥–¥–µ –º—ã –Ω–∞—Ö–æ–¥–∏–º—Å—è
# pwd
